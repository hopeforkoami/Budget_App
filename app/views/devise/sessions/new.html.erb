<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login_container">
  <div class="nav_bar">
    <%= link_to splash_index_path, class: "return_button" do %>
    <!-- <button class="return_button" type="button"> -->
      <%= image_tag('back.svg', class: "return_arrow") %>
      <!-- <img src="./back.svg" alt="return button" srcset="./back.svg" class="return_arrow"> -->
    <!-- </button> -->
    <% end %>
    <span class="nav_title">LOGIN</span>
    <%= f.submit "Log in", class: "right_side_button" %>
    <!-- <button class="right_side_button">Login In</button> -->
  </div>
  <section class="login_section">
    <%= f.email_field :email, autofocus: true,class: "form_text_input input", autocomplete: "email" %>
    <%= f.password_field :password, class: "form_password_input input", autocomplete: "current-password" %>
    <!-- <input type="text" class="form_text_input input" placeholder="Email" name="email"/>
    <input type="password" class="form_password_input input" placeholder="Password"> -->
    <!-- <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %> -->
    <span class="forgot_password">Forgot Password ?</span>
  </section>
</div>
<% end %>
